@model TutorGuide.Models.Post

@{
    ViewBag.Title = "Post Tuition";
}

<section class="content-header text-center">
    <h1>Post Tuition</h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12 col-sm-10 col-md-8 col-md-offset-2">
            <div class="box box-default">
                <div class="box-header">
                </div>
                @using (Html.BeginForm())
                {
                    <div class="box-body with-border">
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @*@Html.HiddenFor(model=> model.StudentId)*@

                        <div class="form-group">
                            <div class="row edit">
                                <div class="col-xs-12 col-sm-4">
                                    @Html.LabelFor(model => model.Subjects, "Subjects to be taught", htmlAttributes: null)
                                </div>
                                <div class="col-xs-12 col-sm-8">
                                    @Html.EditorFor(model => model.Subjects, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Subjects, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row edit">
                                <div class="col-xs-12 col-sm-4">
                                    @Html.LabelFor(model => model.DaysPerWeek, "Number of days per week", htmlAttributes: null)
                                </div>
                                <div class="col-xs-12 col-sm-8">
                                    @Html.EditorFor(model => model.DaysPerWeek, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DaysPerWeek, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row edit">
                                <div class="col-xs-12 col-sm-4">
                                    @Html.LabelFor(model => model.Salary, "Payment", htmlAttributes: null)
                                </div>
                                <div class="col-xs-12 col-sm-8">
                                    @Html.EditorFor(model => model.Salary, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.CheckBoxFor(model => model.IsNegotiable, null)
                                    <label>&nbsp;Negotiable?</label>
                                    @Html.ValidationMessageFor(model => model.Salary, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <div class="form-group">
                            <div class="row edit">
                                <div class="col-xs-0 col-sm-4"></div>
                                <div class="col-xs-12 col-sm-8">
                                    <input type="submit" value="Post Tuition" class="btn btn-primary btn-flat" />
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/jqueryval")
}